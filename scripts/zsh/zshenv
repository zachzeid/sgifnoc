# sgifnoc zsh environment configuration
# This file is sourced by ALL zsh shells (interactive and non-interactive)

# Essential system paths
export PATH="/usr/local/bin:/usr/bin:/bin:/usr/sbin:/sbin"

# Add Homebrew (macOS specific)
if [[ "$OSTYPE" == "darwin"* ]]; then
    export PATH="/opt/homebrew/bin:$PATH"
fi

# pyenv configuration
export PYENV_ROOT="$HOME/.pyenv"
export PATH="$PYENV_ROOT/bin:$PATH"

# Add Poetry (Python package manager)
if [ -d "$HOME/.local/bin" ]; then
    export PATH="$HOME/.local/bin:$PATH"
fi

# Initialize pyenv if available
if command -v pyenv >/dev/null; then
    eval "$(pyenv init --path)"
fi

# Python development settings
export PYTHONDONTWRITEBYTECODE=1
export PYTHONUNBUFFERED=1

# Editor configuration
export EDITOR='vim'

# Ensure these are available in all shells
export SGIFNOC_ENV_LOADED=true